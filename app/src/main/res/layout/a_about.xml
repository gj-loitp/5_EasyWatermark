<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/black">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/baseline_cancel_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorPrimary"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/flAd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTitleAbout"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="28dp"
                android:paddingTop="16dp"
                android:paddingEnd="28dp"
                android:text="@string/about_title_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvVersion"
                style="@style/AboutPageTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:drawablePadding="24dp"
                android:gravity="center|start"
                android:text="@string/about_title_version"
                app:drawableStartCompat="@drawable/baseline_error_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleAbout" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvVersionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tvVersion"
                app:layout_constraintEnd_toEndOf="@id/tvVersion"
                app:layout_constraintTop_toTopOf="@id/tvVersion"
                tools:text="@string/app_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvRating"
                style="@style/AboutPageTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:drawablePadding="24dp"
                android:gravity="center|start"
                android:text="@string/about_title_rating"
                app:drawableStartCompat="@drawable/baseline_grade_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvVersion" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvMoreApp"
                style="@style/AboutPageTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:drawablePadding="24dp"
                android:gravity="center|start"
                android:text="@string/more_apps"
                app:drawableStartCompat="@drawable/baseline_favorite_border_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRating" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTitleInfo"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32sp"
                android:paddingStart="28dp"
                android:paddingTop="16dp"
                android:paddingEnd="28dp"
                android:text="@string/about_title_about"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMoreApp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvChangeLog"
                style="@style/AboutPageTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:drawablePadding="24dp"
                android:gravity="center|start"
                android:text="@string/about_title_update_log"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_update_log"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleInfo" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvOpenSource"
                style="@style/AboutPageTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:drawablePadding="24dp"
                android:gravity="center|start"
                android:text="@string/about_title_open_source"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_open_source"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvChangeLog" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPrivacyCn"
                style="@style/AboutPageTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:drawablePadding="24dp"
                android:gravity="center|start"
                android:text="@string/about_title_privacy_statement_zh"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/baseline_gpp_good_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvOpenSource" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPrivacyEng"
                style="@style/AboutPageTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:drawablePadding="24dp"
                android:gravity="center|start"
                android:text="@string/about_title_privacy_statement"
                app:drawableStartCompat="@drawable/baseline_gpp_good_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrivacyCn" />

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:fadeScrollbars="true"
                android:paddingBottom="53dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrivacyEng"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clDevContainer"
                        android:layout_width="300dp"
                        android:layout_height="226dp"
                        android:layout_marginStart="28dp"
                        android:background="@drawable/bg_card_person_info">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginEnd="32dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@string/developed_with_by_rosu"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="32dp"
                            android:ellipsize="end"
                            android:text="@string/dev_comment"
                            app:layout_constraintBottom_toTopOf="@id/civAvatar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                        <com.mckimquyen.watermark.ui.widget.CircleImageView
                            android:id="@+id/civAvatar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_launcher"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clDesignerContainer"
                        android:layout_width="300dp"
                        android:layout_height="226dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:background="@drawable/bg_card_person_info">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvTitleDesigner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="28dp"
                            android:layout_marginEnd="32dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Designed with ♥ by tovi"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvSubTitleDesigner"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="32dp"
                            android:ellipsize="end"
                            android:text="A Designer."
                            app:layout_constraintBottom_toTopOf="@id/civAvatarDesigner"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvTitleDesigner"
                            tools:text="Designer" />

                        <com.mckimquyen.watermark.ui.widget.CircleImageView
                            android:id="@+id/civAvatarDesigner"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_launcher"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchDynamicColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:padding="28dp"
                android:text="@string/force_open_dynamic_color_support"
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/hsv"
                tools:visibility="visible" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchDebug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="28dp"
                android:text="@string/show_bounds"
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/switchDynamicColor"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/flAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
